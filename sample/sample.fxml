<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Button text="Create file" onAction="#clickCreateFile"
            fx:id="btnCreateFile"
            layoutX="200"
            layoutY="200"
    />
    <Button text="Remove file" onAction="#clickRemoveFile" fx:id="btnRemoveFile"
            layoutX="300"
            layoutY="300"
    />

    <Button text="Load file" onAction="#loadFiles" fx:id="btnLoadFile"/>


</GridPane>